{
  "$schema": "https://unpkg.com/knip@5.84.1/schema.json",
  "includeEntryExports": true,
  "exclude": ["types"],
  "ignoreIssues": {
    "src/index.ts": ["exports", "types"],
    "src/types/ids.ts": ["exports"],
    "src/wallet/**/*.ts": ["exports"]
  },
  "workspaces": {
    ".": {
      "entry": ["src/cli.ts", "src/index.ts", "src/**/*.test.ts"],
      "project": ["src/**/*.ts", "src/**/*.tsx"]
    },
    "packages/create-openhomie": {
      "entry": ["src/index.ts", "src/**/*.test.ts"],
      "project": ["src/**/*.ts"]
    }
  }
}
